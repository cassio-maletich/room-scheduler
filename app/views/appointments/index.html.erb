<p id="notice"><%= notice %></p>

<h1>Agendamentos</h1>

<%= form_with url: appointments_path, method: :get, local: true do |f| %>
  <div class="form-group d-flex">
    <%= f.label :room, "Sala", class: "m-0 mr-1 align-self-center" %>
    <%= f.select :room, options_for_select(@rooms, selected: @current_room.id), { prompt: "Selecione uma sala" }, { class: "custom-select mr-1" } %>
    <%= f.submit "Visualizar agenda", class: "btn btn-primary" %>
  </div>
<% end %>

<%= react_component("Schedule", { appointments: @appointments }) %>

<%= link_to 'New Appointment', new_appointment_path(room_id: @current_room.id) %>
